@using Platform.WebSite.Models
@model UserProfileViewModel
@{
    ViewBag.Title = "Edit";

    bool isCreate = UserProfileViewModel.IsDefault(this.Model);
    string postActionName = (isCreate ? "Create" : "Edit");
    string ctlName = "UserManager";

    if(isCreate)
    {
        this.Model.ID = String.Empty;
        this.Model.Account = String.Empty;
        this.Model.Email = String.Empty;
        this.Model.Title = string.Empty;
        this.Model.FirstName = String.Empty;
        this.Model.LastName = String.Empty;
    }
}

@* 提示訊息 *@
@if (TempData["TipMsg"] != null)
{
    <script>
        alert('@TempData["TipMsg"]');
    </script>
}

<div class="row">
    <div class="col-xl-12">
        <div class="card card-custom">
            <!--begin::Card header-->
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        @(this.Model.Account)
                    </h3>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(postActionName, ctlName, FormMethod.Post, new { @class = "form" }))
                {
                    <div class="tab-content">
                        <!--begin::Tab-->
                        <div class="tab-pane show px-7 active" id="kt_user_edit_tab_1" role="tabpanel">
                            <!--begin::Row-->
                            <div class="row">
                                <div class="col-xl-2"></div>
                                <div class="col-xl-7 my-2">
                                    <!--begin::Row-->
                                    <div class="row">
                                        <label class="col-3"></label>
                                        <div class="col-9">
                                            <h6 class="text-dark font-weight-bold mb-10">個人資訊</h6>
                                        </div>
                                    </div>
                                    <!--end::Row-->
                                    <!--begin::Group-->
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left">@Html.DisplayNameFor(model => model.Account)</label>
                                        <div class="col-9">
                                            @if (isCreate)
                                            {
                                                <input class="form-control form-control-lg form-control-solid" type="text" name="Account" value="@Html.DisplayFor(model => model.Account)" placeholder="please input name">
                                            }
                                            else
                                            {
                                                <div class="form-control form-control-lg form-control-solid bg-white">
                                                    @Html.DisplayFor(model => model.Account)
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!--end::Group-->
                                    <!--begin::Group-->
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left">@Html.DisplayNameFor(model => model.FirstName)</label>
                                        <div class="col-9">
                                            <input class="form-control form-control-lg form-control-solid" type="text" name="FirstName" value="@Html.DisplayFor(model => model.FirstName)" placeholder="please input name">
                                        </div>
                                    </div>
                                    <!--end::Group-->
                                    <!--begin::Group-->
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left">@Html.DisplayNameFor(model => model.LastName)</label>
                                        <div class="col-9">
                                            <input class="form-control form-control-lg form-control-solid" type="text" name="LastName" value="@Html.DisplayFor(model => model.LastName)" placeholder="please input name">
                                        </div>
                                    </div>
                                    <!--end::Group-->
                                    <!--begin::Group-->
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left">@Html.DisplayNameFor(model => model.Email)</label>
                                        <div class="col-9">
                                            <input class="form-control form-control-lg form-control-solid" type="email" name="Email" value="@Html.DisplayFor(model => model.Email)" placeholder="please input name">
                                        </div>
                                    </div>
                                    <!--end::Group-->
                                    <!--begin::Group-->
                                    <div class="form-group row">
                                        <label class="col-form-label col-3 text-lg-right text-left">@Html.DisplayNameFor(model => model.Title)</label>
                                        <div class="col-9">
                                            <input class="form-control form-control-lg form-control-solid" type="text" name="Title" value="@Html.DisplayFor(model => model.Title)" placeholder="please input job title">
                                        </div>
                                    </div>
                                    <!--end::Group-->
                                </div>
                            </div>
                            <!--end::Row-->
                        </div>
                        <!--end::Tab-->
                    </div>

                    <div class="d-flex justify-content-between border-top pt-10">
                        <div class="mr-2">
                            <a href="@Url.Action("Index", "UserManager")" class="btn btn-light font-weight-bolder text-uppercase px-9 py-4">
                                返回
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success font-weight-bolder text-uppercase px-9 py-4" data-wizard-type="action-submit">送出</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
