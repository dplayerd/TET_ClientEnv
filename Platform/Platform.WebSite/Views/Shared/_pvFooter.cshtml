        </div>
        <!--end::Copyright-->
        <!--begin::Nav-->
        <div class="nav nav-dark">
            @foreach (var item in this.Model.FooterMenus)
            {
                <a href="@item.Url" class="nav-link pl-0 pr-5" @(item.IsOuterLink ? @"target=""_blank""" : "")>@item.Name</a>
            }
        </div>
        <!--end::Nav-->
    </div>
    <!--end::Container-->
</div>
